<div class="page-header">
  <h1>Outbox
    <%= link_to "New Message", new_message_path, :remote => true, :class => 'btn btn-xs btn-success', :style => 'float: right;' %>
  </h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-center"><input type="checkbox" id="selecctall"/></th>
      <th class="text-center">Name</th>
      <th class="text-center">Subject</th>
      <th class="text-center">Date</th>
    </tr>
  </thead>

  <tbody>
    <% for message in @messages %>
      <tr>
        <td class="text-center"><%= check_box_tag 'code_ids[]', message[:id], false,:class => 'check_all' %></td>
        <td class="text-center">To: <%= message.receiver.username %></td>
        <td class="text-center"><%= message.subject %></td>
        <td class="text-center"><%= message.created_at.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id='new_message'></div>