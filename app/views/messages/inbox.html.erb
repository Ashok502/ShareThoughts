<div class="page-header">
  <h1>Inbox
    <%= link_to "New Message", new_message_path, :remote => true, :class => 'btn btn-xs btn-success', :style => 'float: right;' %>
  </h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th><input type="checkbox" id="selecctall"/></th>
      <th>Name</th>
      <th>Subject</th>
      <th>Date</th>
    </tr>
  </thead>

  <tbody>
    <% for message in @messages %>
      <tr>
        <td><%= check_box_tag 'code_ids[]', message[:id], false,:class => 'check_all' %></td>
        <td><%= message.is_read == false ? "<b>From: #{message.user.username}</b>".html_safe : "From: #{message.user.username}" %></td>
        <td><%= message.subject %></td>
        <td><%= message.created_at.strftime("%d-%m-%Y") %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<div id='new_message'></div>