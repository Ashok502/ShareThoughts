<div class="page-header">
    <h1>Cart
        <%= link_to "Continue Shopping", '/', :class => 'btn btn-xs btn-success', :style => 'float: right;' %>
    </h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Unit Price</th>
            <th>Full Price</th>
        </tr>
    </thead>

    <tbody>
        <% for cart in @items %>
          <tr>
              <td><%= cart.product.title %></td>
              <td><%= number_to_currency(cart.unit_price) %> X <%= cart.quantity%></td>
              <td><%= number_to_currency(cart.full_price) %></td>
          </tr>
        <% end %>
        <tr>
            <td></td>
            <td>Total Price</td>
            <td><%= number_to_currency(current_cart.total_price) %></td>
        </tr>
    </tbody>
</table>
<div style="float: right;">
    <%= link_to "Pay via BrianTree", new_order_path(:pay => 'brian_tree'), :class => 'btn btn-xs btn-default' %> | 
    <%= link_to "Pay via Checkout", new_order_path(:pay => 'paypal'), :class => 'btn btn-xs btn-success' %> | 
    <%= link_to "Pay via Authorize", new_order_path(:pay => 'authorize'), :class => 'btn btn-xs btn-danger' %> | 
    <%= link_to "Pay via Paypal", pay_path, :class => 'btn btn-xs btn-warning' %>
</div>