<%= form_for @video, :url => product_image_path(@product, @video), :method => 'PUT' do |f| %>
<h3>Crop Image
  <%= f.submit 'Save', :class => 'btn btn-xs btn-success', :style => "float: right;" %>
</h3>
<hr />
  <%= f.cropbox :video, :width => 300 %>
  <%= f.crop_preview :video, :width => 150 %>
  <br />
<% end %>
