<section class="col-sm-9 col-md-9 col-lg-9 col-xs-12">
    <h1><%= @video.name.html_safe %></h1>
    <div class="ccrow">
        <div class="col-sm-8 col-md-8 col-lg-8" style="height: 438px;">
            <a href="<%= "#{SITE}"+@video.video.url %>"  style="display:block; height: 436px;width: 519px;z-index: 100px;" id="player"></a>
        </div>
        <div class="col-sm-4 col-md-4 col-lg-4 col-xs-12">

            <div>
                <p>Price: <%= number_to_currency(@video.price) %></p>
                <div>
                    <%= link_to "Buy Now","", :class => 'btn btn-success btn-xs' %>
                    <%= link_to "Gift","" , :class => 'btn btn-warning btn-xs' %>
                </div>
            </div>
        </div>
    </div>
    <br /><br /><br />
    <b>Video Details:</b>
    <br />
    <p><%= @video.description.html_safe %></p>
</section>
<script>
  flowplayer("player", {src: "/assets/flowplayer/flowplayer-3.2.6.swf", wmode: "transparent"},
  {clip: {
          autoPlay: false
      }});
</script>