<div class="page-header">
  <h1>Orders</h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th>Name</th>
      <th>Payment Type</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody>
    <% for message in @orders %>
      <tr>
        <td><%= message.user.username %></td>
        <td><%= message.payment_type %></td>
        <td><%= number_to_currency(message.cart.total_price) %></td>
      </tr>
    <% end %>
  </tbody>
</table>