<div class="page-header">
    <h1>Orders</h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>Name</th>
            <th>Payment Type</th>
            <th>Authorization</th>
            <th>Price</th>
            <th>Actions</th>
        </tr>
    </thead>

    <tbody>
        <% for order in @orders %>
          <tr>
              <td><%= order.first_name + ' ' + order.last_name %></td>
              <td><%= order.payment_type %></td>
              <td><%= order.authorization %></td>
              <td><%= number_to_currency(order.cart.total_price) %></td>
              <td>
                <%= link_to "<i class='fa fa-search'></i>".html_safe, order_path(order) %>
                <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, order_path(order), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))} %>
              </td>
          </tr>
        <% end %>
    </tbody>
</table>
