<div class="page-header">
  <h1>Orders</h1>
</div>
<table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
  <thead>
    <tr>
      <th class="text-center">Name</th>
      <th class="text-center">Payment Type</th>
      <th class="text-center">Authorization</th>
      <th class="text-center">Price</th>
      <th class="text-center">Actions</th>
    </tr>
  </thead>

  <tbody>
    <% for order in @orders %>
      <tr>
        <td class="text-center"><%= order.first_name + ' ' + order.last_name %></td>
        <td class="text-center"><%= order.payment_type %></td>
        <td class="text-center"><%= order.authorization %></td>
        <td class="text-center"><%= number_to_currency(order.cart.total_price) %></td>
        <td class="text-center">
          <%= link_to "<i class='fa fa-search'></i>".html_safe, order_path(order) %>
          <%= link_to "<i class='fa fa-trash-o'></i>".html_safe, order_path(order), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))} %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
